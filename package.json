{
  "name": "webpack-config",
  "version": "1.0.0",
  "description": "Complete webpack config for all typical filetypes in web development",
  "main": "index.js",
  "private": true,
  "author": "SharakPL <git@sharak.pl>",
  "license": "ISC",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config=config/webpack.dev.js",
    "build:dev": "cross-env NODE_ENV=development webpack --config=config/webpack.dev.js",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --debug --config=config/webpack.dev.js",
    "start": "npm run dev",
    "serve": "php -S localhost:8080 -t ./dist"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "last 1 edge version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.6.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.21.2",
    "extract-loader": "^5.1.0",
    "file-loader": "^6.0.0",
    "html-loader": "^1.1.0",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "stylelint": "^13.6.1",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-high-performance-animation": "^1.5.1",
    "stylelint-no-unsupported-browser-features": "^4.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0"
  },
  "dependencies": {
    "autoprefixer": "^9.8.5",
    "core-js": "^3.6.5",
    "cross-env": "^7.0.2",
    "mini-css-extract-plugin": "^0.9.0",
    "typescript": "^3.9.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  }
}
